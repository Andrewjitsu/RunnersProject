  <head>
    <title>Shoe Runners Home</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="assets/css/main.css" />
  </head>
  <body class="landing">

    <!-- Header -->
      <header id="header" class="alt">
        <h1>Powered by <strong>Git Reqt</strong></h1>
      </header>

      <a href="#menu" class="navPanelToggle"><span class="fa fa-bars"></span></a>

    <!-- Banner -->
      <section id="banner">
        <h2>Shoe Runners</h2>
        <ul class="actions">
          <li><a href="/runners" class="button special big">Get Started</a></li>
        </ul>
      </section>

      <!-- One -->
          <section class="container">
              <h4>Leaderboard</h4>
              <div class="table-wrapper">
                <table class="alt">
                  <thead>
                    <tr>
                      <th>Name</th>
                      <th>Shoe Size</th>
                    </tr>
                  </thead>
                  <tbody>
                  <%@runner.each do |r|%>
                    <tr>
                      <td><%=r.first_name%> <%=r.last_name%></td>
                      <td><%=r.shoe_size%></td>
                    </tr>
                    <% end %>
                  </tbody>
                  
                </table>
              </div>
            </section>
              

      <!-- Two -->
        <section id="two" class="wrapper style2 special">
          <div class="container">
            <header class="major">
              <h2>The Spirit of Running</h2>
              <p>Just take the first step...</p>
            </header>
            <div class="row 150%">
              <div class="6u 12u$(xsmall)">
                <div class="image fit captioned">
                  <%= image_tag 'pic03.jpg' %>
                  <h3>Set aside a time solely for running</h3>
                </div>
              </div>
              <div class="6u$ 12u$(xsmall)">
                <div class="image fit captioned">
                  <%= image_tag 'pic02.jpg' %>
                  <h3>Running can get you back on track</h3>
                </div>
              </div>
            </div>
          </div>
        </section>

      

      <!-- Four -->
        <section id="four" class="wrapper style3 special">
          
        </section>

    <!-- Footer -->
      <footer id="footer">
        <div class="container">
          <ul class="copyright">
            <li>&copy; 2016 Shoe Runners</li>
          </ul>
        </div>
      </footer>

    

  </body>
</html>




