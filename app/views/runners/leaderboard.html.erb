<div class="container">
	
<table class="table table-striped table-responsive">
	<h1>Leaderboard</h1>
	<thead>
	<tr>
		
		<th>Name</th>
		<th>Shoe Size</th>
	</tr>
	</thead>
	<tbody>
		<% @runner.each do |r| %>
		<tr>
			<td><%=r.first_name%> <%=r.last_name%></td>
			<td><%=r.shoe_size%></td>
		</tr>
		<% end %>
	</tbody>
</table><br>
	<a class="btn btn-danger" href="/runners/<%=@r.id%>">Go Back</a>
</div>
